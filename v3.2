/* ===== VARIABLES ===== */
:root {
  --bg: #f8fafc;
  --card: #ffffff;
  --text: #0f172a;
  --border: #e2e8f0;
}
body.dark {
  --bg: #000000;
  --card: #0a0a0a;
  --text: #ffffff;
  --border: #262626;
}

/* ===== BASE ===== */
* { box-sizing: border-box; }
body {
  margin: 0;
  font-family: Inter, system-ui, sans-serif;
  background: var(--bg);
  color: var(--text);
}

/* ===== HEADER ===== */
#header {
  height: 90px;
  background: var(--card);
  border-bottom: 1px solid var(--border);
  display: flex;
  align-items: center;
  padding: 0 24px;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 1000;
}
#header img { height: 70px; }
#header .spacer { flex: 1; }
#header button {
  background: none;
  border: none;
  font-size: 22px;
  cursor: pointer;
  color: var(--text);
}

/* ===== GRID (UNCHANGED BASELINE) ===== */
.main-grid {
  margin-top: 110px;
  display: grid;
  grid-template-columns: 260px 1fr 260px;
  gap: 20px;
  padding: 0 20px;
}

/* ===== BLOCKS ===== */
aside, main {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: 10px;
  padding: 20px;
}

/* ===== STEP 1 â€” HOME WALLPAPER ONLY ===== */
body.index {
  background:
    linear-gradient(rgba(248,250,252,0.92), rgba(248,250,252,0.92)),
    url("https://images.unsplash.com/photo-1518770660439-4636190af475")
    center / cover no-repeat fixed;
}
body.index.dark {
  background:
    linear-gradient(rgba(0,0,0,0.85), rgba(0,0,0,0.85)),
    url("https://images.unsplash.com/photo-1518770660439-4636190af475")
    center / cover no-repeat fixed;
}

/* ===== MOBILE ===== */
@media (max-width: 900px) {
  .main-grid {
    grid-template-columns: 1fr;
  }
}
